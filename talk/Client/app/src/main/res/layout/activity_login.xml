<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffeb33"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/iv_talk"
        android:layout_marginTop="100dp"/>
    <EditText
        android:id="@+id/etLoginId"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:hint=" 아이디"
        android:background="@drawable/login_id_border" />
    <TextView
        android:layout_width="280dp"
        android:layout_height="0.1dp"
        android:background="#e4dcdc"/>

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:background="@drawable/login_password_border"
        android:hint=" 비밀번호"
        android:inputType="textPassword" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    <Button
        android:id="@+id/btLogin"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/bt_login_border"
        android:text="로그인"
        android:enabled="false"
        android:textColor="#8e7974"
        android:onClick="login"/>
        <ProgressBar
            android:id="@+id/pbLogin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvLoginFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#e42020"
        android:paddingLeft="1dp"
        android:textSize="12dp"
        android:text="아이디 혹은 비밀번호가 잘못되었습니다."
        android:layout_marginBottom="5dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btMemberJoin"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text="회원가입"
        android:textColor="#353131"
        android:textSize="13dp"
        android:background="@drawable/bt_find_id"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="아이디/비밀번호 찾기"
        android:textColor="#353131"
        android:textSize="13dp"
        android:background="@drawable/bt_find_id"/>
</LinearLayout>
